{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="container mt-2 pl-4">
        <section class="content-header pl-1">
            <ol class="breadcrumb">
                <li>
                    <a href="#">
                        <i class="fas fa-sign-in"></i> Connexion
                    </a>
                </li>
            </ol>
        </section>
        <div class="mt-5">
            <script src="https://www.google.com/recaptcha/api.js" async defer></script>
            {% for flashError in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flashError }}</div>
            {% endfor %}

            <h1>Register</h1>

            {{ form_start(registrationForm) }}
            {{ form_row(registrationForm.username) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.agreeTerms, {
                label: "J'accepte les condition générales d'utilisations"
            }) }}
            <div class="g-recaptcha" data-sitekey="6LeiL7cZAAAAAM_papMLFHhKFUWj2QhW12e5uTGB
"></div>
            <div class="text-center">

                <button type="submit" class="btn btn-primary btn-lg">Inscription</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
