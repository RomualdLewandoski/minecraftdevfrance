{% extends 'baseAdmin.html.twig' %}


{% block body %}
    <section class="content-header">
        <h1>
            Gestion Forum
            <small>Lecture du Forum</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin') }}"><i class="fa fa-dashboard"></i> Admin</a></li>
            <li><a href="#">Forums</a></li>
            <li class="active">Lecture</li>
        </ol>
    </section>
    <div class="dashboard1 mt-2">

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forum.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ forum.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ forum.description }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ forum.position }}</td>
            </tr>
            <tr>
                <th>IsLocked</th>
                <td>{{ forum.isLocked ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsActive</th>
                <td>{{ forum.isActive ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ forum.catName }}</td>
            </tr>
            <tr>
                <th>Parent</th>
                <td>{{ forum.displayName }}</td>
            </tr>


            </tbody>
        </table>


        <div class="row">
            <div class="col-md-6 text-right">
                <a href="{{ path('forum_edit', {'id': forum.id}) }}"  class="btn btn-warning btn-lg">edit</a>
            </div>
            <div class="col-md-6">
                <form method="post" action="{{ path('forum_delete', {'id': forum.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forum.id) }}">
                    <button class="btn btn-lg btn-danger">Delete</button>
                </form>

            </div>
        </div>

        <a href="{{ path('forum_index') }}"><i class="fa fa-arrow-left"></i> back to list</a>


    </div>


{% endblock %}
