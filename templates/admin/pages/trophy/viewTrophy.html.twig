{% extends 'baseAdmin.html.twig' %}

{% block title %}Trophy{% endblock %}

{% block body %}
    <section class="content-header">
        <h1>
            Gestion Trophées
            <small>Lecture du trophée</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin') }}"><i class="fa fa-dashboard"></i> Admin</a></li>
            <li><a href="#">Trophées</a></li>
            <li class="active">Lecture</li>
        </ol>
    </section>
    <div class="dashboard1 mt-2">

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ trophy.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ trophy.name }}</td>
            </tr>
            <tr>
                <th>BgColor</th>
                <td>
                    <h5>
                        <div class="badge"
                             style="background-color: {{ trophy.bgColor }}; color: white">{{ trophy.bgColor }}</div>
                    </h5>
                </td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ trophy.description }}</td>
            </tr>
            <tr>
                <th>IsSuper</th>
                <td>{{ trophy.isSuper ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Action</th>
                <td>{{ trophy.action == 0 ? "Poster x sujets" :
                    trophy.action == 1 ? "Poster x réponses" :
                    trophy.action == 2 ? "Recevoir X likes" :
                    trophy.action == 3 ? "Donner x likes" :
                    trophy.action == 4 ? "Ancienneté de x " :
                    trophy.action == 5 ? "Recevoir x superLike" :
                    "Valeur inconnue" }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ trophy.value }}</td>
            </tr>
            </tbody>
        </table>

        <div class="row">
            <div class="col-md-6 text-right">
                <a href="{{ path('trophy_edit', {'id': trophy.id}) }}" class="btn btn-warning btn-lg">edit</a>
            </div>
            <div class="col-md-6">
                <form method="post" action="{{ path('trophy_delete', {'id': trophy.id}) }}"
                      onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trophy.id) }}">
                    <button class="btn btn-lg btn-danger">Delete</button>
                </form>

            </div>
        </div>

        <a href="{{ path('trophy_index') }}"><i class="fa fa-arrow-left"></i> back to list</a>
    </div>
{% endblock %}
