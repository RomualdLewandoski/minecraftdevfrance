{% extends 'baseAdmin.html.twig' %}

{% block body %}

    <section class="content-header">
        <h1>
            Gestion Navigation
            <small>Lecture de l'onglet</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('admin') }}"><i class="fa fa-dashboard"></i> Admin</a></li>
            <li><a href="#">Navigation</a></li>
            <li><a href="#">Listes</a></li>
            <li class="active">Lecture</li>
        </ol>
    </section>

    <div class="dashboard1 mt-2">

        <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ navbar_element.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ navbar_element.nom }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ navbar_element.value }}</td>
            </tr>
            <tr>
                <th>Position</th>
                <td>{{ navbar_element.position }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ navbar_element.type == 0 ? 'Link' : 'Dropdown'}}</td>
            </tr>

            <tr>
                <th>Ouvrir dans un nouvel onglet ? </th>
                <td>{{ navbar_element.isNewTab ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

        <div class="row">
            <div class="col-md-6 text-right">
                <a href="{{ path('navbar_element_edit', {'id': navbar_element.id}) }}"  class="btn btn-warning btn-lg">edit</a>
            </div>
            <div class="col-md-6">
                <form method="post" action="{{ path('navbar_element_delete', {'id': navbar_element.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ navbar_element.id) }}">
                    <button class="btn btn-lg btn-danger">Delete</button>
                </form>

            </div>
        </div>

        <a href="{{ path('navbar_element_index') }}"><i class="fa fa-arrow-left"></i> back to list</a>

    </div>
{% endblock %}
