{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-2 pl-4">
        <section class="content-header pl-1">
            <ol class="breadcrumb">
                <li>
                    <a href="#">
                        <i class="fas fa-comments"></i> Edition d'un sujet
                    </a>
                </li>
            </ol>
        </section>
        <div class="mt-5">
            <div class="card">

                {{ form_start(form) }}
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <div class="row">
                            <div class="col-md-8">
                                {{ form_row(form.titre) }}
                                {{ form_row(form.message) }}
                            </div>
                            <div class="col-md-4">
                                <div class="card mt-4" style="width: 18rem;">
                                    <div class="card-body">
                                        {{ form_row(form.tags) }}
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-8">
                                <div class="footer-topic">
                                    <button class="btn btn-primary">Editer le topic</button>
                                </div>
                            </div>
                            <div class="col-md-5"></div>
                        </div>
                    </blockquote>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <script>
        {% for tag in topic.tags %}
            $('option[value="{{ tag.id }}"]').attr('selected', 'selected');
        {% endfor %}
    </script>
{% endblock %}

